<body>
  <div class="container">
    <h2>Su İçtin mi?</h2>
    <div class="water-container">
      <div class="water-fill" id="water-fill"></div>
    </div>
    <button onclick="drinkWater()">Su İç</button>
    <div class="completion-message" id="completion-message">Harika! Günlük su ihtiyacını tamamladın!</div>
  </div>

  <script>
    let waterLevel = 0;
    const maxLevel = 300; // Maksimum su seviyesi (px)
    let drinkCount = 0;
    let clickCount = 0;

    function drinkWater() {
      waterLevel += 30; // Su içme miktarı
      clickCount++;
      if(clickCount !== 1 && clickCount%10===1)
      {
        waterLevel = 0;
          drinkCount = 0;
          clickCount = 0;
          document.getElementById('water-fill').style.height = `${waterLevel}px`;
          document.getElementById('completion-message').style.display = 'none';
      }
      if (waterLevel > maxLevel) {
        waterLevel = maxLevel;
      }

      document.getElementById('water-fill').style.height = `${waterLevel}px`;

      if (waterLevel === maxLevel) {
        document.getElementById('completion-message').style.display = 'block';
        drinkCount++;

        //setTimeout(() => {
          //waterLevel = 0;
          //drinkCount = 0;
          //document.getElementById('water-fill').style.height = `${waterLevel}px`;
          //document.getElementById('completion-message').style.display = 'none';
        //}, 2000);

        if (drinkCount === 10) {
          burstConfetti();
        }
      }
    }

    function burstConfetti() {
      for (let i = 0; i < 100; i++) {
        const confetti = document.createElement('div');
        confetti.classList.add('confetti');
        confetti.style.left = `${Math.random() * 100}vw`;
        confetti.style.animationDuration = `${Math.random() * 2 + 1}s`;
        confetti.style.animationDelay = `${Math.random() * 2}s`;
        document.body.appendChild(confetti);

        setTimeout(() => {
          confetti.remove();
        }, 2000);
      }
    }
  </script>
</body>
</html>
